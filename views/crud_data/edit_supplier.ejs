<%- include('../layout/header') %>
    <div class="container border-b-2 h-16">
        <div class="my-4 ml-4">
            <a href="/supplier" class="p-2 bg-red-400 text-white rounded-sm mr-2"><i
                    class="fi fi-rr-angle-double-small-left text-xs"></i>
                kembali</a>
        </div>
    </div>
    <div class="w-2/3 mx-auto mb-40 mt-4">
        <h2 class="text-center text-xl font-bold">Data Supplier</h2>
        <% data.forEach(items=>{%>
            <form action="/update_supplier/<%= items.kode %>" method="post" class="m-auto mt-2 relative">
                <div class="m-auto flex border-l-4 border-red-400 rounded-sm bg-white p-4 mt-4">
                    <div class="form-group mx-2">
                        <p>Nama supplier</p>
                        <input type="text" name="supplier" value="<%= items.supplier %>"
                            class="input-bordered h-8 pl-2 bg-slate-200 mb-2">
                    </div>
                    <div class="form-group mx-2">
                        <p>Alamat</p>
                        <input type="text" name="alamat" value="<%= items.alamat %>"
                            class="input-bordered h-8 pl-2 bg-slate-200">
                    </div>
                </div>
                <div class="m-auto flex border-l-4 border-red-400 rounded-sm bg-white p-4 mt-4">
                    <div class="form-group mx-2 w-4/5">
                        <p>Telephon</p>
                        <input type="text" name="telepon" class="input-bordered h-8 pl-2 bg-slate-200 w-full mb-2"
                            value="<%= items.telepon %>">
                    </div>
                </div>
                <div class="m-auto flex border-l-4 border-red-400 rounded-sm bg-white p-4 mt-4">
                    <div class="form-group mx-2 w-4/5">
                        <p>Email</p>
                        <input type="text" name="email" class="input-bordered h-8 pl-2 bg-slate-200 w-full mb-2"
                            value="<%= items.email %>">
                    </div>
                </div>
                <input type="submit" name="submit" class="p-2 bg-blue-400 text-white rounded-sm absolute right-0
                    mt-2">
            </form>
            <%}) %>
    </div>
    <%- include('../layout/footer') %>