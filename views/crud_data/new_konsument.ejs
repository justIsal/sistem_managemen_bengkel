<%- include('../layout/header') %>
    <div class="container border-b-2 h-16">
        <div class="my-4 ml-4">
            <a href="/konsumen" class="p-2 bg-red-400 text-white rounded-sm mr-2"><i
                    class="fi fi-rr-angle-double-small-left text-xs"></i>
                kembali</a>
        </div>
    </div>
    <div class="w-2/3 mx-auto mb-40 mt-4">
        <h2 class="text-center text-xl font-bold">Data Pelanggan</h2>
        <form action="/create_konsumen" method="post" class="m-auto mt-2 relative">
            <div
                class="m-auto flex flex-wrap justify-around items-center  border-l-4 border-red-400 rounded-sm bg-white p-4 mt-4 card-wrapper">
                <div class="form-group mx-2">
                    <p>ID</p>
                    <input type="text" name="id" class="input-bordered h-8 pl-2 bg-slate-200 mb-2">
                </div>
                <div class="form-group mx-2">
                    <p>Nama</p>
                    <input type="text" name="nama" class="input-bordered h-8 pl-2 bg-slate-200">
                </div>
                <div class="form-group mx-2">
                    <p>Alamat</p>
                    <input type="text" name="alamat" class="input-bordered h-8 pl-2 bg-slate-200 mb-2">
                </div>
                <div class="form-group mx-2">
                    <p>Telepon</p>
                    <input type="text" name="telepon" class="input-bordered h-8 pl-2 bg-slate-200">
                </div>
            </div>
            <div class="m-auto flex border-l-4 border-red-400 rounded-sm bg-white p-4 mt-4">
                <div class="form-group mx-2 w-4/5">
                    <p>Deskripsi Service</p>
                    <input type="text" name="deskripsi" class="input-bordered h-8 pl-2 bg-slate-200 w-full mb-2">
                </div>
                <div class="form-group mx-2">
                    <p>Biaya Service</p>
                    <input type="text" name="text" class="input-bordered h-8 pl-2 bg-slate-200 mb-2">
                </div>
            </div>
            <!-- <a href="#" class="p-2 bg-blue-400 text-white rounded-sm absolute right-0 mt-2"><i
                    class="fi fi-rr-plus"></i>
                tambah data</a> -->
            <input type="submit" name="submit" class="px-4 py-2 bg-blue-400 mb-2 absolute right-0 mt-3">
        </form>
    </div>
    <%- include('../layout/footer') %>