<%- include('../layout/header') %>
    <div class="container border-b-2 h-16">
        <div class="my-4 ml-4">
            <a href="/historiServ" class="p-2 bg-red-400 text-white rounded-sm mr-2"><i
                    class="fi fi-rr-angle-double-small-left text-xs"></i>
                kembali</a>
        </div>
    </div>
    <div class="w-2/3 mx-auto mb-40 mt-4">
        <h2 class="text-center text-xl font-bold">Data histori service</h2>
        <form action="/create_histori" method="post" class="mx-auto mt-2 relative">
            <div
                class="flex flex-wrap justify-around items-center border-l-4 border-red-400 rounded-sm bg-white p-4 mt-4">
                <div class="form-group mx-2">
                    <p>ID service</p>
                    <input type="text" name="idService" class="input-bordered h-8 pl-2 bg-slate-200 mb-2">
                </div>
                <div class="form-group mx-2">
                    <p>ID transaksi</p>
                    <input type="text" name="idTransaksi" class="input-bordered h-8 pl-2 bg-slate-200">
                </div>
                <div class="form-group mx-2">
                    <p>Tanggal</p>
                    <input type="datetime" name="tanggal" class="input-bordered h-8 pl-2 bg-slate-200">
                </div>
                <div class="form-group mx-2">
                    <p>ID pelanggan</p>
                    <input type="text" name="idPelanggan" class="input-bordered h-8 pl-2 bg-slate-200 mb-2">
                </div>
                <div class="form-group mx-2">
                    <p>ID mekanik</p>
                    <input type="text" name="idMekanik" class="input-bordered h-8 pl-2 bg-slate-200">
                </div>
            </div>
            <!-- <a href="#" class="p-2 bg-blue-400 text-white rounded-sm absolute right-0 mt-2"><i
                    class="fi fi-rr-plus"></i>
                tambah data</a> -->
            <input type="submit" name="submit" class="bg-blue-400 text-white rounded-sm absolute right-0 mt-2">
        </form>
    </div>
    <%- include('../layout/footer') %>